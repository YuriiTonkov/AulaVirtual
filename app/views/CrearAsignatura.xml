<Alloy>
	<Window id="winCrearAsignatura" class="container">
		<TableView top="10%" id="Marco">
			<TableViewRow height="40dp">
				<Label class="label" >Nombre</Label>
				<TextField class="textbox" editable="false"  id="txtNombreAsignatura"></TextField>
			</TableViewRow>
			<TableViewRow height="40dp">	
				<Label class="label" >Descripcion</Label>
				<TextField class="textbox"  editable="false" id="txtDescripcion"></TextField>
			</TableViewRow>	
			<TableViewRow height="40dp">
				<Label class="label" >Asignatura Optativa</Label>
				<Switch title="Optativa" value="false" visible="true" id="swtOptativa"/>
			</TableViewRow>
		<Button class="button" top="-50dp" id="btnGuardar" title="Guardar" onClick="GuardarAsignatura"></Button>
	</Window>
</Alloy>