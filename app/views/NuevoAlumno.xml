<Alloy>
	<Window id="winNuevoAlumno" onSwipe="Arrastre" class="container">
		<ScrollView id="scrollViewAlumno" top="15%" showVerticalScrollIndicator="true" showHorizontalScrollIndicator="false" height="130%" width="100%"  >
		   <View id="viewAlumno" >
			 	<Label class="labelAlumno" top ="0dp" >Nombre </Label>
				<TextField top ="15dp"  class="textboxAlumno" id="txtNombre" ></TextField>
				<Label class="labelAlumno" top ="45dp">1er Apellido </Label>
				<TextField class="textboxAlumno" top ="60dp" id="txtApellido1"></TextField>
				<Label class="labelAlumno" top ="90dp">2o Apellido </Label>
				<TextField class="textboxAlumno" top ="105dp" id="txtApellido2"></TextField>
				<Label class="labelAlumno" top ="135dp">Direccion </Label>
				<TextField class="textboxAlumno" top ="150dp" id="txtDireccion"></TextField>
				<Label class="labelAlumno" top ="180dp">Cod.Postal </Label>
				<TextField class="textboxAlumno" top ="195dp" id="txtCodPostal"></TextField>
				<Label class="labelAlumno" top ="225dp">Telefono </Label>
				<TextField class="textboxAlumno" top ="240dp" id="txtTelefono"></TextField>
				<Label class="labelAlumno" top ="270dp">Telefono2 </Label>
				<TextField class="textboxAlumno" top ="285dp" id="txtTelefono2"></TextField>
				<Label class="labelAlumno" top ="315dp">Email </Label>
				<TextField class="textboxAlumno" top ="330dp" id="txtEmail"></TextField>
				<Label class="labelAlumno" top ="360dp">Email2 </Label>
				<TextField class="textboxAlumno" top ="375dp" id="txtEmail2"></TextField>
				<Label class="labelAlumno" top ="405dp">Nombre Padre </Label>
				<TextField class="textboxAlumno" top ="420dp" id="txtPadre"></TextField>
				<Label class="labelAlumno" top ="450dp">Nombre Madre </Label>
				<TextField class="textboxAlumno" top ="465dp" id="txtMadre"></TextField>
			</View>
		</ScrollView>
		<ImageView  left="10%" id="imgAlumno" height="15%" width="16%" top="2%" onClick="sacarFoto"></ImageView>
		<Button class="button" top="2%" borderRadius="5dp" left="40%" height="25dp" width="80dp" onClick="TomarAnotacion" id="btnAnotacion" title="Notas"></Button>
		<Button class="button" top="-50dp" id="btnGuardar" title="Guardar" onClick="GuardarAlumno"></Button>
	</Window>
</Alloy>
