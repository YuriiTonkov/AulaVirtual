<Alloy>
	<Window id="winNuevoAlumno" onSwipe="Arrastre" class="container">
		<TableView top="10%" id="Marco">
			<TableViewRow height="40dp">
			 	<Label class="labelAlumno">Nombre</Label>
				<TextField class="textboxAlumno" editable="false" id="txtNombre" ></TextField>
			</TableViewRow>
			<TableViewRow height="40dp">
				<Label class="labelAlumno" >1er Apellido</Label>
				<TextField class="textboxAlumno" editable="false" id="txtApellido1"></TextField>
			</TableViewRow>	
			<TableViewRow height="40dp">
				<Label class="labelAlumno" >2o Apellido</Label>
				<TextField class="textboxAlumno" editable="false" id="txtApellido2"></TextField>
			</TableViewRow>	
			<TableViewRow height="40dp">
				<Label class="labelAlumno">Direccion</Label>
				<TextField class="textboxAlumno"  editable="false" id="txtDireccion"></TextField>
			</TableViewRow>	
			<TableViewRow height="40dp">
				<Label class="labelAlumno">Cod.Postal</Label>
				<TextField class="textboxAlumno" editable="false" id="txtCodPostal"></TextField>
			</TableViewRow>	
			<TableViewRow height="40dp">
				<Label class="labelAlumno">Telefono</Label>
				<TextField class="textboxAlumno" editable="false" id="txtTelefono"></TextField>
			</TableViewRow>	
			<TableViewRow height="40dp">
				<Label class="labelAlumno">Telefono2</Label>
				<TextField class="textboxAlumno"editable="false" id="txtTelefono2"></TextField>
			</TableViewRow>	
			<TableViewRow height="40dp">
				<Label class="labelAlumno">Email</Label>
				<TextField class="textboxAlumno" editable="false"  id="txtEmail"></TextField>
			</TableViewRow>	
			<TableViewRow height="40dp">
				<Label class="labelAlumno">Email2</Label>
				<TextField class="textboxAlumno" editable="false" id="txtEmail2"></TextField>
			</TableViewRow>	
			<TableViewRow height="40dp">
				<Label class="labelAlumno">Nombre Padre</Label>
				<TextField class="textboxAlumno" editable="false" id="txtPadre"></TextField>
			</TableViewRow>	
			<TableViewRow height="40dp">
				<Label class="labelAlumno">Nombre Madre</Label>
				<TextField class="textboxAlumno" editable="false" id="txtMadre"></TextField>
			</TableViewRow>
		</TableView>
		<ImageView  left="10%" id="imgAlumno" height="15%" width="16%" top="2%" onClick="sacarFoto"></ImageView>
		<Button class="button" top="2%" borderRadius="5dp" left="40%" height="25dp" width="80dp" onClick="TomarAnotacion" id="btnAnotacion" title="Notas"></Button>
		<Button class="button" top="-50dp" id="btnGuardar" title="Guardar" onClick="GuardarAlumno"></Button>
	</Window>
</Alloy>
